a:4:{s:16:"__cache_contents";O:8:"stdClass":35:{s:2:"id";s:3:"127";s:5:"title";s:75:"Thông báo V/v tuyển dụng viên chức chuyên ngành Luật kinh tế";s:5:"alias";s:59:"thong-bao-vv-tuyen-dung-vien-chuc-chuyen-nganh-luat-kinh-te";s:5:"intro";s:164:"Do nhu cầu công việc, Đài Phát Thanh và Truyền Hình Khánh Hòa cần tuyển viên chức chuyên ngành Luật kinh tế với những yêu cầu sau:";s:7:"content";s:2196:"<p style="margin-top: 8px; margin-bottom: 8px; padding-top: 0px; padding-right: 0px; padding-left: 0px; border: 0px none; vertical-align: baseline; color: rgb(51, 51, 51); font-size: 12px; line-height: 18px; text-align: justify; padding-bottom: 10px ! important;"><font face="Times New Roman"><span style="font-size: 14px;">Do nhu cầu công việc, Đài Phát Thanh và Truyền Hình Khánh Hòa cần tuyển viên chức chuyên ngành Luật kinh tế với những yêu cầu sau:</span><br><br><span style="font-size: 14px;">- Không quá 35 tuổi</span><br><br><span style="font-size: 14px;">- Tốt nghiệp Đại học ngành Luật kinh tế, Luật Thương mại loại khá, giỏi</span><br><br><span style="font-size: 14px;">- Am hiểu các quy định pháp luật trong các lĩnh vực: pháp chế, hợp đồng kinh tế, các mô hình hoạt động của công ty, tài chính doanh nghiệp….</span><br><br><span style="font-size: 14px;">- Ưu tiên ứng viên: Có kinh nghiệm làm việc trong lĩnh vực yêu cầu ít nhất từ 3 năm trở lên</span><br><br><span style="font-size: 14px;">&nbsp;&nbsp; * HỒ SƠ GỒM CÓ :</span><br><br><span style="font-size: 14px;">1. Đơn xin dự tuyển viên chức</span><br><br><span style="font-size: 14px;">2. Sơ yếu lý lịch (có dán ảnh, có xác nhận của chính quyền địa phương).</span><br><br><span style="font-size: 14px;">3. Giấy khám sức khỏe (không quá 06 tháng).</span><br><br><span style="font-size: 14px;">4. Bản sao các văn bằng, chứng chỉ (có công chứng).</span><br><br><span style="font-size: 14px;">5. Bản sao hộ khẩu, CMND (có công chứng)</span><br><br><span style="font-size: 14px;">6. Giấy chứng nhận thuộc đối tượng ưu tiên (nếu có) được cơquan, tổ chức có thẩm quyền chứng thực.</span><br><br><span style="font-size: 14px;">&nbsp;&nbsp;&nbsp;&nbsp; *&nbsp; HÌNH THỨC TUYỂN DỤNG:</span><br><br><span style="font-size: 14px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Các ứng viên sẽ qua đợt thi tuyển: thi viết và phỏng vấn trực tiếp.</span></font></p>";s:5:"photo";s:30:"upload/2016/03/07/DSC_0199.JPG";s:6:"status";s:1:"1";s:7:"created";s:19:"2016-03-01 15:36:10";s:8:"modified";s:19:"2016-03-07 15:34:49";s:9:"extension";s:6:"career";s:4:"link";s:0:"";s:8:"position";s:0:"";s:6:"parent";s:1:"0";s:7:"gallery";s:0:"";s:6:"fields";s:0:"";s:8:"ordering";s:1:"0";s:3:"tag";s:28:"Thông báo, tuyển dụng ";s:8:"keywords";s:28:"Thông báo, tuyển dụng ";s:11:"description";s:75:"Thông báo V/v tuyển dụng viên chức chuyên ngành Luật kinh tế";s:4:"type";s:0:"";s:8:"title_en";s:0:"";s:8:"intro_en";s:0:"";s:10:"content_en";s:0:"";s:3:"uid";s:1:"1";s:8:"sum_like";s:1:"0";s:8:"sum_view";s:1:"0";s:11:"sum_comment";s:1:"0";s:9:"date_from";s:19:"0000-00-00 00:00:00";s:7:"date_to";s:19:"0000-00-00 00:00:00";s:14:"number_episode";s:1:"0";s:12:"published_by";s:1:"0";s:3:"hot";s:1:"0";s:8:"featured";s:1:"0";s:4:"home";s:1:"0";s:7:"special";s:1:"0";}s:15:"__cache_created";i:1482704990;s:20:"__cache_dependencies";a:0:{}s:15:"__cache_expires";i:1482791390;}